<div class="container">

  <h1>Edit contact</h1>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>
          First name
        </th>
        <th>
          Last name
        </th>
        <th>
          Tags
        </th>
      </tr>
    <thead>
    <tbody>
        <tr>
          <th>
            <%= @contact.first_name %>
          </th>
          <th>
            <%= @contact.last_name %>
          </th>
          <th>
            <%= @contact.tag_list %>
          </th>
        </tr>
    <tbody>
  </table>

  <%= link_to "Back", root_path, :class => "btn btn-primary" %>
  <%= link_to "Edit", edit_contact_path(@contact), :class => "btn btn-warning" %>
  <%= link_to "Delete", contact_path(@contact), method: :delete, data: { confirm: "Are you sure ?" }, :class => "btn btn-danger" %>

</div>
