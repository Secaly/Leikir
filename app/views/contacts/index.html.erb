<div class="container">

    <h1>Contacts</h1>

      <div class="row vertical-align">
        <div class="col-md-10">
          <nav aria-label="Page_navigation">
            <ul class="pagination justify-content-end">
              <% if @page > 1 %>
                <li class="page-item">
                  <%= link_to "Previous", page: @prev_page, limit: @limit %>
                </li>
              <% else %>
                <li class="page-item disabled">
                  <a class="page-link">Previous</a>
                </li>
              <% end %>
              <li class="page-item disabled">
                <a class="page-link"> Page : <%= @page %></a>
              </li>
              <% if @contacts.length == 10 %>
                <li class="page-item">
                  <%= link_to "Next", page: @next_page, limit: @limit %>
                </li>
              <% else %>
                <li class="page-item disabled">
                  <a class="page-link">Next</a>
                </li>
              <% end %>
            </ul>
          </nav>
        </div>

        <div class="col-md-2">
          <div class="btn-group justify-content-end">
            <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Display by <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">
              <li><%= link_to "10", {page: 1, limit: 10} %></li>
              <li><%= link_to "20", {page: 1, limit: 20} %></li>
              <li><%= link_to "50", {page: 1, limit: 50} %></li>
            </ul>
          </div>
        </div>
      </div>

    <table class="table table-hover">
      <thead>
        <tr>
          <th>
            First name
          </th>
          <th>
            Last name
          </th>
          <th>
            Update
          </th>
        </tr>
      <thead>
      <tbody>
        <% @contacts.each do |contact| %>
          <tr>
            <th>
              <%= contact.first_name %>
            </th>
            <th>
              <%= contact.last_name %>
            </th>
            <th>
              <%= link_to "edit", contact, :class => "btn btn-warning" %>
            </th>
          </tr>
        <% end %>
      <tbody>
    </table>

    <div>
      <%= link_to "New contact", new_contact_path, :class => "btn btn-primary btn-block" %>
    </div>

</div>
